{% comment %}
  Animated Text Snippet
  Params:
    text: string - The text to display
    class: string - Additional classes for styling
    underline_class: string - Classes for the underline
{% endcomment %}

<div class="{{ class }}">
  <h1 class="animated-text__title">
    {% for char in text %}
      <span class="animated-text__char">{{ char }}</span>
    {% endfor %}
  </h1>
  <div class="animated-text__underline {{ underline_class }}"></div>
</div>

<style>
  .custom-animated-text .animated-text__char {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px);
    animation: slideIn 0.5s forwards;
    animation-delay: calc(var(--char-index) * 0.1s);
    font-size: 100%;
  }

  .custom-animated-text .animated-text__title {
    text-align: left;
    font-size: 100%;
  }

  .custom-animated-text .animated-text__underline {
    height: 2px;
    background: linear-gradient(to right, #00f, #f0f, #f00, rgb(0, 220, 62), rgb(255, 183, 0));
    width: 100%;
    background-size: 200% 100%;
    animation: moveGradient 3s linear infinite;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes moveGradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const chars = document.querySelectorAll('.animated-text__char');
    chars.forEach((char, index) => {
      char.style.setProperty('--char-index', index);
    });
  });
</script>
