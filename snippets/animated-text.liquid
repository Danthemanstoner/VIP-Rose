{% comment %}
  Animated Text Snippet with Icon
  Params:
    text: string - The text to display
    class: string - Additional classes for styling
    underline_class: string - Classes for the underline
{% endcomment %}

<div class="{{ class }}">
  <div class="relative flex items-center gap-2">
    <div
      style="display: flex; overflow: hidden; align-items: center;"
      class="text-4xl font-bold text-center {{ textClassName }}"
    >
      {% for char in text %}
        <span key="{{ forloop.index0 }}">
          {{ char }}
        </span>
      {% endfor %}
    </div>
    <img src="https://cdn.shopify.com/s/files/1/0681/1690/6166/files/blk_vip_shopify.png?v=1740052927" alt="VIP Icon" style="height: 1em; vertical-align: middle;">
  </div>
  <div
    style="position: absolute; height: 2px; background: linear-gradient(to right, #00f, #f0f, #f00, rgb(0, 220, 62), rgb(255, 183, 0)); width: 100%;"
    class="{{ underlineHeight }} {{ underlineOffset }} bg-gradient-to-r {{ underlineGradient }} {{ underlineClassName }}"
  ></div>
</div>

<style>
  .custom-animated-text .animated-text__char {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px);
    animation: slideIn 0.5s forwards;
    animation-delay: calc(var(--char-index) * 0.1s);
    font-size: 100%; /* Ensure font size is appropriate */
  }

  .custom-animated-text .animated-text__title {
    text-align: left; /* Align text to the left */
    font-size: 100%; /* Ensure font size is appropriate */
  }

  .custom-animated-text .animated-text__underline {
    height: 2px;
    background: linear-gradient(to right, #00f, #f0f, #f00, rgb(0, 220, 62), rgb(255, 183, 0));
    width: 100%; /* Set width to full to always show the underline */
    background-size: 200% 100%; /* Extend the background size for the animation */
    animation: moveGradient 3s linear infinite; /* Apply the animation */
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes moveGradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const chars = document.querySelectorAll('.animated-text__char');
    chars.forEach((char, index) => {
      char.style.setProperty('--char-index', index);
    });
  });
</script>
