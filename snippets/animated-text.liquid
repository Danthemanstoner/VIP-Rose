{% comment %}
  Animated Text Snippet with Icon and Gradient Underline
  Params:
    text: string - The text to display
    class: string - Additional classes for styling
{% endcomment %}

<div class="{{ class }} relative">
  <!-- Text and Icon Container -->
  <div class="flex items-center" style="position: relative; overflow: visible; gap: 10px;">
    <div class="text-4xl font-bold text-center custom-animated-text" style="display: flex; align-items: center;">
      {% for char in text %}
        <span class="animated-text__char" style="display: inline-block; opacity: 0; transform: translateY(20px);">
          {{ char }}
        </span>
      {% endfor %}
    </div>
    <img src="https://cdn.shopify.com/s/files/1/0681/1690/6166/files/blk_vip_shopify.png?v=1740052927" 
         alt="VIP Icon" 
         class="icon-vip"
         style="height: 1.2em; vertical-align: middle;">
  </div>

  <!-- Gradient Underline -->
  <div class="animated-text__underline" style="position: absolute; left: 0; bottom: -5px; height: 2px; width: 30%; background: linear-gradient(to right, #00f, #f0f, #f00, rgb(0, 220, 62), rgb(255, 183, 0)); background-size: 200% 100%; animation: moveGradient 3s linear infinite;"></div>
</div>

<style>
  /* Animation for Characters */
  .animated-text__char {
    animation: slideIn 0.5s forwards;
    animation-delay: calc(var(--char-index) * 0.1s);
  }

  /* Fix the gradient movement */
  @keyframes moveGradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Text Slide-In */
  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const chars = document.querySelectorAll('.animated-text__char');
    chars.forEach((char, index) => {
      char.style.setProperty('--char-index', index);
    });
  });
</script>
